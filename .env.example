# Environment Configuration Template
# Copy this file to .env and fill in your values

# Conda Environment
CONDA_ENV_NAME=kaggle-hm
CONDA_PATH=E:\miniconda3

# Project Configuration
PROJECT_ROOT=huggingface_project
DATA_ROOT=data
LOGS_ROOT=logs
CHECKPOINTS_ROOT=checkpoints

# Experiment Tracking
WANDB_PROJECT=huggingface-hm
WANDB_ENTITY=your-wandb-username

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST="8.0;8.6;8.9;9.0"

# Data Configuration
DATASET_PATH=data/external
BATCH_SIZE=32
NUM_WORKERS=4

# Model Configuration
MODEL_NAME=baseline
MAX_SEQUENCE_LENGTH=512

# Training Configuration
LEARNING_RATE=0.001
EPOCHS=100
WEIGHT_DECAY=0.0001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s